<resources xmlns:tools="http://schemas.android.com/tools">
    <!-- Base application theme - 清新蓝绿色主题 -->
    <style name="Base.Theme.安卓热更新" parent="Theme.Material3.DayNight.NoActionBar">
        <!-- 主色调 -->
        <item name="colorPrimary">@color/primary</item>
        <item name="colorPrimaryDark">@color/primary_dark</item>
        <item name="colorAccent">@color/accent</item>
        
        <!-- Material3 颜色 -->
        <item name="colorPrimaryContainer">@color/primary_light</item>
        <item name="colorOnPrimary">@color/white</item>
        <item name="colorSecondary">@color/btn_secondary</item>
        
        <!-- 背景 -->
        <item name="android:windowBackground">@color/background</item>
        <item name="android:colorBackground">@color/background</item>
        
        <!-- 状态栏 -->
        <item name="android:statusBarColor">@color/primary_dark</item>
    </style>
    
    <style name="Theme.安卓热更新" parent="Base.Theme.安卓热更新"/>
    
    <!-- 卡片样式 -->
    <style name="CardStyle">
        <item name="android:background">@drawable/card_background</item>
        <item name="android:padding">16dp</item>
        <item name="android:layout_marginBottom">12dp</item>
    </style>
    
    <!-- 主按钮样式 -->
    <style name="PrimaryButton" parent="Widget.Material3.Button">
        <item name="android:backgroundTint">@color/btn_primary</item>
        <item name="android:textColor">@color/white</item>
    </style>
    
    <!-- 次要按钮样式 -->
    <style name="SecondaryButton" parent="Widget.Material3.Button.OutlinedButton">
        <item name="strokeColor">@color/btn_secondary</item>
        <item name="android:textColor">@color/btn_secondary</item>
    </style>
</resources>
